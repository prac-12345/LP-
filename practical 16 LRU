import java.util.*;

class LRU {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter number of frames: ");
        int f = sc.nextInt();
        int frame[] = new int[f];

        System.out.print("Enter number of pages: ");
        int n = sc.nextInt();

        int pages[] = new int[n];
        System.out.println("Enter page reference string:");
        for (int i = 0; i < n; i++) {
            pages[i] = sc.nextInt();
        }

        Arrays.fill(frame, -1); // Initially frames are empty

        int faults = 0;

        System.out.println("\nPage\tFrames");
        for (int i = 0; i < n; i++) {
            boolean hit = false;

            // Check if page already exists in frame (HIT)
            for (int j = 0; j < f; j++) {
                if (frame[j] == page[i]) {
                    hit = true;
                    break;
                }
            }

            // If not found â†’ Page Fault
            if (!hit) {
                faults++;

                // If there is still free space in frame
                boolean placed = false;
                for (int j = 0; j < f; j++) {
                    if (frame[j] == -1) {  // empty frame found
                        frame[j] = page[i];
                        placed = true;
                        break;
                    }
                }

                // If no empty frame, apply LRU
                if (!placed) {
                    int lastUsedIndex = -1;
                    int current = i;

                    for (int j = 0; j < f; j++) {
                        int k;
                        // Search backward in page list to see when frame[j] was last used
                        for (k = i - 1; k >= 0; k--) {
                            if (pages[k] == frame[j])
                                break;
                        }

                        // If this frame page was never used recently
                        if (k < current) {
                            current = k;
                            lastUsedIndex = j;
                        }
                    }

                    // Replace least recently used page
                    frame[lastUsedIndex] = page[i];
                }
            }

            // Display frames after each page
            System.out.print(page + "\t");
            for (int j = 0; j < frames; j++) {
                System.out.print(frame[j] + " ");
            }
            System.out.println();
        }

        System.out.println("\nTotal Page Faults = " + faults);
    }
}
